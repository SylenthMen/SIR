---
import { Releases } from "../data/releases.json";
---

<div class="flex flex-wrap justify-center items-center bg-black">
  {
    Releases.map(
      ({
        artProfile,
        trackName,
        nameArt,
        imgArt,
        gen,
        fecha,
        lnk,
        Desc,
        estado,
        lnkArtist,
      }) => {
        const estadoColor = {
          "en revisión": "bg-yellow-500/25", // Amarillo para "en revisión"
          "pendiente por subir": "bg-red-500/45", // Rojo para "pendiente por subir"
          aprobado: "bg-green-500/25", // Verde para "aprobado"
        };

        const badgeColor =
          estadoColor[estado.toLowerCase()] || "bg-gray-500/45";

        const estadoTexto = estado ? estado.toUpperCase() : "N/A";

        return (
          <div class="border rounded-lg shadow-md overflow-hidden bg-black text-white m-4 p-3 flex flex-col w-full md:w-1/3 lg:w-1/4">
            <div class="object-contain">
              <img src={imgArt} alt={`Imagen de ${nameArt}`} class="w-full" />
            </div>
            <div class="space-y-3 mt-3">
              <div class="flex flex-col space-y-1.5">
                <h3 class="tracking-tight text-md font-semibold">
                  {trackName}
                </h3>
                <p class="text-xs text-gray-300">{gen}</p>
                <p class="text-xs text-gray-300">{Desc}</p>
              </div>
              <p class="text-xs">{fecha}</p>
              <div class="flex items-center space-x-1">
                <img
                  class="w-8 h-8 object-cover rounded-full"
                  src={artProfile}
                  alt=""
                />
                <a href={lnkArtist} class="text-xs text-white">
                  {nameArt}
                </a>
              </div>
              <div class="flex items-center space-x-1">
                <a
                  class="p-2 bg-yellow-700 rounded-md hover:bg-yellow-400"
                  href={lnk}
                >
                  VER ADELANTO
                </a>
              </div>
              <div class="flex justify-end">
                <span
                  class={`${badgeColor} text-xs font-semibold px-2 py-1 rounded-full hover:scale-110`}
                >
                  {estadoTexto}
                </span>
              </div>
            </div>
          </div>
        );
      }
    )
  }
</div>
