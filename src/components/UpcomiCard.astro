---
let { Titulo } = Astro.props;
let { DescripcionUno } = Astro.props;
let { DescripcionDos } = Astro.props;
---

<div class="flex justify-center items-center py-5 bg-black">
  <div
    class="border flex flex-col md:flex-row rounded-lg shadow-md overflow-hidden bg-black text-white w-full md:w-3/4"
  >
    <div class="md:w-1/3">
      <slot name="COVER-ART" />
    </div>
    <div class="w-2/3 p-3 space-y-3">
      <div class="flex flex-col space-y-1.5">
        <h3 class="tracking-tight text-md font-semibold">{Titulo}</h3><p
          class="text-xs text-gray-300"
        >
          {DescripcionUno}
        </p>
      </div><p class="text-xs">
        {DescripcionDos}
      </p><div class="flex items-center space-x-1">
        <slot name="ProfilePhoto" />
        <slot name="LinkArtist" />
      </div><div class="flex items-center space-x-1">
        <slot name="btn-Adelanto" />
      </div><div class="items-center p-6 flex justify-end">
        <slot name="EstadoT" />
      </div>
    </div>
  </div>
</div>
