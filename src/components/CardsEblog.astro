<style>
  .card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 20px;
  }

  .card {
    border: 4px solid #ff9f33;
    border-radius: 8px;
    overflow: hidden;
    margin: 20px;
    max-width: 300px;
    transition: 0.3s all ease;
  }

  .card:hover {
    scale: 1.1;
  }

  .card img {
    width: 100%;
    height: auto;
  }

  .card-content {
    padding: 20px;
  }

  .card-title {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 10px;
    text-align: center;
  }

  .card-description {
    font-size: 1rem;
    margin-bottom: 15px;
    text-align: center;
  }

  .see-more {
    display: block;
    text-align: right;
    text-decoration: none;
    color: #ff9f33;
    font-weight: bold;
    text-align: center;
    padding: 10px;
    border: 2px solid #ff9f33;
    background-color: #ff9f3325;
  }

  .see-more:hover {
    background-color: #ff9f3350;
  }
</style>

