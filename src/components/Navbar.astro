<body class="font-sans">
  <div class="flex items-center justify-between px-6 py-4 bg-black shadow-sm">
    <a class="font-bold text-purple-800" href="/" rel="ugc"
      ><img class="w-12" src="/logosello.png" alt="loguito" /></a
    >

    <div class="lg:hidden">
      <button id="menu-toggle" class="text-gray-600 focus:outline-none">
        <svg
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>

    <!-- Menú para dispositivos móviles -->
    <div
      id="mobile-menu"
      class="lg:hidden fixed inset-0 bg-orange-800 bg-opacity-75 z-50 hidden"
    >
      <div class="flex items-center justify-end p-4">
        <button id="close-menu" class="text-white focus:outline-none">
          <svg
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <ul class="flex flex-col items-center space-y-4">
        <li><a href="/" class="text-gray-300">HOME</a></li>
        <li>
          <a href="/upcomingreleases/" class="text-gray-300"
            >UPCOMING RELEASES</a
          >
        </li>
        <li><a href="/store/" class="text-gray-300">STORE</a></li>
        <li><a href="/artists/" class="text-gray-300">ARTISTS</a></li>
        <li><a href="/about/" class="text-gray-300">ABOUT</a></li>
        <li><a href="/construc/" class="text-gray-300">BLOG</a></li>
        <li><a href="/construc/" class="text-gray-300">CONTACT</a></li>
      </ul>
    </div>

    <div class="hidden lg:flex items-center space-x-4 mr-10">
      <a href="/" class="text-white pr-4 font-bold hover:text-orange-600"
        >HOME</a
      >
      <a
        href="/upcomingreleases/"
        class="text-white pr-4 font-bold hover:text-orange-600"
        >UPCOMING RELEASES</a
      >
      <a href="/store/" class="text-white pr-4 font-bold hover:text-orange-600"
        >STORE</a
      >
      <a
        href="/artists/"
        class="text-white pr-4 font-bold hover:text-orange-600">ARTISTS</a
      >
      <a href="/about/" class="text-white pr-4 font-bold hover:text-orange-600"
        >ABOUT</a
      >
      <a
        href="/construc/"
        class="text-white pr-4 font-bold hover:text-orange-600">BLOG</a
      >
      <a
        href="/construc/"
        class="text-white pr-4 font-bold hover:text-orange-600">CONTACT</a
      >
    </div>
  </div>

  <script>
    // JavaScript para manejar el menú hamburguesa y el menú lateral
    document.addEventListener("DOMContentLoaded", function () {
      const menuToggle = document.getElementById("menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      const closeMenu = document.getElementById("close-menu");

      menuToggle.addEventListener("click", function () {
        mobileMenu.classList.toggle("hidden");
      });

      closeMenu.addEventListener("click", function () {
        mobileMenu.classList.add("hidden");
      });
    });
  </script>
</body>
